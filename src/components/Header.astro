---
import LanguageSwitcher from './LanguageSwitcher.tsx';
import { getCurrentLanguage } from '../lib/i18n';

const currentLang = getCurrentLanguage(Astro.url);
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-sm border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-purple-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-sm">VA</span>
          </div>
          <span class="text-xl font-bold text-gray-900">VANTA</span>
        </a>
      </div>
      
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/automation" class="text-gray-600 hover:text-gray-900 transition-colors">Tự động hóa</a>
        <a href="/pricing" class="text-gray-600 hover:text-gray-900 transition-colors">Bảng giá</a>
        <a href="/contact" class="text-gray-600 hover:text-gray-900 transition-colors">Contact</a>
      </nav>

      <div class="flex items-center space-x-4">
        <LanguageSwitcher 
          currentLang={currentLang} 
          currentPath={currentPath} 
          client:load 
        />
        <LanguageSwitcher 
          currentLang={currentLang} 
          currentPath={currentPath} 
          client:load 
        />
        <a href="/login" class="text-gray-600 hover:text-gray-900 transition-colors">Đăng nhập</a>
        <a href="/signup" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition-colors">
          Bắt đầu
        </a>
      </div>
    </div>
  </div>
</header>