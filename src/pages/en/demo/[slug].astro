---
export async function getStaticPaths() {
  const automationDemos = [
    {
      slug: 'automated-customer-inbox-response',
      id: '1',
      title: 'Automated customer inbox response',
      tagline: 'Stop manual responses. Automatically send welcome emails and detailed information instantly.',
      category: 'Email Marketing',
      description: 'Automatically send welcome emails and detailed information when customers fill out contact forms',
      benefits: 'Reduce manual response time by 80%',
      problems: [
        'Hours spent manually responding to each email',
        'Customers wait too long to receive information',
        'Easy to miss or respond late',
        'Cannot respond outside business hours'
      ],
      solutions: [
        'Automatic response within 30 seconds',
        'Works 24/7, never stops',
        'Consistent and professional information',
        'Increase lead conversion rates'
      ],
      techStack: ['Gmail API', 'Zapier', 'Google Forms', 'Mailchimp'],
      basePrice: 2500000,
      deliveryTime: '3-5 days'
    }
  ];

  return automationDemos.map(demo => ({
    params: { slug: demo.slug },
    props: { demo }
  }));
}

const { demo } = Astro.props;

import Layout from '../../../layouts/Layout.astro';
import ProductDemo from '../../../components/ProductDemo.tsx';
import ConfigurationEngine from '../../../components/ConfigurationEngine.tsx';
---

<Layout title={`${demo.title} - VANTA`} description={demo.tagline}>
  <div class="min-h-screen bg-gray-50">
    <!-- Back Navigation -->
    <div class="bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <a href="/en" class="inline-flex items-center text-purple-600 hover:text-purple-700 transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to homepage
        </a>
      </div>
    </div>

    <!-- Section 1: The "Aha!" Moment -->
    <section class="bg-gradient-to-br from-purple-50 to-indigo-100 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <div class="inline-block bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium mb-4">
            {demo.category}
          </div>
          <h1 class="text-4xl font-bold text-gray-900 mb-4">
            {demo.title}
          </h1>
          <p class="text-xl text-gray-700 max-w-3xl mx-auto">
            {demo.tagline}
          </p>
        </div>

        <!-- Interactive Demo -->
        <ProductDemo demo={demo} client:load lang="en" />
      </div>
    </section>

    <!-- Section 2: The Business Case -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- The Problem -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">
              Are you facing these problems?
            </h2>
            <div class="space-y-4">
              {demo.problems.map((problem: string) => (
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-6 h-6 bg-red-100 rounded-full flex items-center justify-center mt-1">
                    <span class="text-red-600 text-sm">✗</span>
                  </div>
                  <p class="ml-3 text-gray-700">{problem}</p>
                </div>
              ))}
            </div>
          </div>

          <!-- The Solution -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">
              Here's how our AI solves it
            </h2>
            <div class="space-y-4">
              {demo.solutions.map((solution: string) => (
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center mt-1">
                    <span class="text-green-600 text-sm">✓</span>
                  </div>
                  <p class="ml-3 text-gray-700">{solution}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Section 3: Configuration Engine -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Customize your solution & see your price
          </h2>
          <p class="text-lg text-gray-600">
            Answer a few simple questions to get an accurate quote
          </p>
        </div>

        <ConfigurationEngine demo={demo} client:load lang="en" />
      </div>
    </section>

    <!-- Section 4: Building Trust & Confidence -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- What's Included -->
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-6">
              What you'll receive
            </h3>
            <div class="space-y-4">
              <div class="flex items-center">
                <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                  <span class="text-green-600 text-sm">✓</span>
                </div>
                <span class="ml-3 text-gray-700">Complete AI setup and configuration</span>
              </div>
              <div class="flex items-center">
                <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                  <span class="text-green-600 text-sm">✓</span>
                </div>
                <span class="ml-3 text-gray-700">Integration support with existing systems</span>
              </div>
              <div class="flex items-center">
                <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                  <span class="text-green-600 text-sm">✓</span>
                </div>
                <span class="ml-3 text-gray-700">Team training and onboarding</span>
              </div>
              <div class="flex items-center">
                <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                  <span class="text-green-600 text-sm">✓</span>
                </div>
                <span class="ml-3 text-gray-700">30-day performance guarantee</span>
              </div>
            </div>
          </div>

          <!-- Technology & Seller Info -->
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-6">
              Technology used
            </h3>
            <div class="grid grid-cols-2 gap-4 mb-8">
              {demo.techStack.map((tech: string) => (
                <div class="bg-gray-100 rounded-lg p-3 text-center">
                  <span class="text-sm font-medium text-gray-700">{tech}</span>
                </div>
              ))}
            </div>

            <div class="bg-purple-50 rounded-lg p-6">
              <h4 class="font-semibold text-gray-900 mb-2">About the developer</h4>
              <div class="flex items-center">
                <div class="w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center mr-4">
                  <span class="text-white font-bold">V</span>
                </div>
                <div>
                  <p class="font-medium text-gray-900">VANTA Team</p>
                  <p class="text-sm text-gray-600">AI automation experts for Vietnamese businesses</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Secondary CTA -->
    <section class="py-8 bg-gray-100 border-t border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <p class="text-gray-600 mb-4">
          Have a complex project or specific questions?
        </p>
        <a href="https://tally.so/r/woLO1V" class="text-purple-600 hover:text-purple-700 font-medium">
          Schedule a free 15-minute consultation →
        </a>
      </div>
    </section>
  </div>
</Layout>